<?xml version="1.0" encoding="utf-8"?>
<!--setting the layout, I used a frame-layout to give the components more flexibility and can be overlapped if needed-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">
    <!--Setting the spinner component and its characteristics-->
    <!--entries where we set the spinner's items-->
    <Spinner
        android:id="@+id/ItemsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:entries="@array/UniNames"
        />
    <!--Setting the Image view component and its characteristics-->
    <!--clickable and focusable are sat to be true,
    meaning they can be both clicked and navigated to with keyboard-->
    <ImageView
        android:id="@+id/uniLable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Choose University from the list shown above"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"/>
    <!--Setting the button component and its characteristics -->
    <!--ifClick is a method on the main activity java file that handles the "click" action-->
    <Button
        android:id="@+id/ButtonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Show University's Site"
        android:onClick="ifClick"
        />

</FrameLayout>
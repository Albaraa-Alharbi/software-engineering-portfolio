<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/detail_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/student_details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/detail_title"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_student_name"
        android:textSize="20sp"
        android:textColor="@color/detail_text_main"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_student_id"
        android:textSize="18sp"
        android:textColor="@color/detail_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>